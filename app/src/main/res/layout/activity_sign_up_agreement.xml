<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linearLayout_signUp_topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/left_arrow_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="회원가입"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:src="@drawable/btn_cancel" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/parent_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_signUp_topBar">

        <LinearLayout
            android:id="@+id/linearLayout_signUp_agreementsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/tv_signUp_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="약관 동의"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!--    아래 약관에 모두 동의합니다-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agreeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chk_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorEveryTimeRed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아래 약관에 모두 동의합니다."
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <!--    서비스이용약관 동의-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agree_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorEveryTimeRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서비스이용약관 동의 (필수)"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/child_scrollView_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/agreement_border"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="@string/agreement_1"
                            android:textColor="@color/colorDarkerGrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--    개인정보처리방침 동의-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agree_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="customOnClick"
                        android:buttonTint="@color/colorEveryTimeRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보처리방침 동의 (필수)"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/child_scrollView_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/agreement_border"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="@string/agreement_2"
                            android:textColor="@color/colorDarkerGrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--    커뮤니티이용규칙 확인-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agree_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorEveryTimeRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티이용규칙 확인 (필수)"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/child_scrollView_3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/agreement_border"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="@string/agreement_3"
                            android:textColor="@color/colorDarkerGrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--    광고성 정보 수신 동의-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agree_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorEveryTimeRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="광고성 정보 수신 동의 (선택)"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/child_scrollView_4"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/agreement_border"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="@string/agreement_4"
                            android:textColor="@color/colorDarkerGrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--    본인 명의로 가입 진행-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agree_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorEveryTimeRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="본인 명의를 이용하여 가입을 진행하겠습니다."
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/child_scrollView_5"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/agreement_border"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="@string/agreement_5"
                            android:textColor="@color/colorDarkerGrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--    만 14세 이상-->
            <LinearLayout
                android:id="@+id/linearLayout_signUp_agree_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorEveryTimeRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만 14세 이상입니다."
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/child_scrollView_6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/agreement_border"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="@string/agreement_6"
                            android:textColor="@color/colorDarkerGrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


            <Button
                android:id="@+id/btn_signUp_1_phoneCertification"
                android:layout_marginTop="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="휴대폰 인증"
                android:background="@drawable/btn_red"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_signUp_1_gotoSignUp_2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이핀 인증(일단 생략하고 정보입력창으로 이동)"
                android:background="@drawable/btn_lightgrey"
                android:textColor="@color/colorDarkGrey" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>