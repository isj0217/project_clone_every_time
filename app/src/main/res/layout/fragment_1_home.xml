<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorWhite">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorRed"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/university_name"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="23sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_marginEnd="25dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/search_glass"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/my_profile"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/unit_edges"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/calendar" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기말고사"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6월 29일 (월) ~ 7월 4일 (토)"
                            android:textSize="13sp"
                            android:textColor="@color/colorLigntGreen"
                            android:textStyle="bold" />

                        <Button
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="학사 일정"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/btn_lightgray" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/unit_edges"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/lightbulb" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="초간단 학점 계산 방법"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이번 학기 예상 학점 계산해보자!"
                            android:textSize="13sp"
                            android:textColor="@color/colorOrange"
                            android:textStyle="bold" />

                        <Button
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="자세히"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/btn_lightgray" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>


</ScrollView>


</LinearLayout>